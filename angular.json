{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "schematicCollections": ["@angular-eslint/schematics"]
  },
  "newProjectRoot": "projects",
  "projects": {
    "angular-notification": {
      "projectType": "library",
      "root": "projects/angular-notification",
      "sourceRoot": "projects/angular-notification/src",
      "prefix": "bbb",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/angular-notification/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/angular-notification/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/angular-notification/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/angular-notification/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/angular-notification/**/*.ts", "projects/angular-notification/**/*.html"]
          }
        }
      }
    },
    "visual-test": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/visual-test",
      "sourceRoot": "projects/visual-test/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/visual-test",
            "index": "projects/visual-test/src/index.html",
            "main": "projects/visual-test/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/visual-test/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["projects/visual-test/src/favicon.ico", "projects/visual-test/src/assets"],
            "styles": ["projects/visual-test/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "visual-test:build:production"
            },
            "development": {
              "browserTarget": "visual-test:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/visual-test/**/*.ts", "projects/visual-test/**/*.html"]
          }
        }
      }
    }
  }
}
